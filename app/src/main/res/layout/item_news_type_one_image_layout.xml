<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_2"
    android:layout_marginEnd="@dimen/dp_2"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_12"
    android:paddingTop="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="又出新法规 货车司机的你 需要知道的新规定！"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/ivImageNew"
            android:layout_width="@dimen/dp_112"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@drawable/img_verso" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFlagTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_keep_top" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_weight="1"
            android:text="1小时前"
            android:textColor="@color/gray999999"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:id="@+id/llShare"
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_share_small" />

            <TextView
                android:id="@+id/tvShareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_3"
                android:text="2545" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/ic_news_read_blue" />

        <TextView
            android:id="@+id/tvReadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_3"
            android:text="1235" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grayF2F2F2" />
</LinearLayout>