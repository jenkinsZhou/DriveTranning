<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_12"
    android:paddingStart="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_12"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black333333"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="又出新法规 货车司机的你 需要知道的新规定！" />
        <ImageView
            android:id="@+id/ivImageNew"
            android:layout_marginStart="@dimen/dp_5"
            android:src="@drawable/img_verso"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_keep_top" />

        <TextView
            android:layout_marginStart="@dimen/dp_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1小时前"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray999999"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:drawableLeft="@mipmap/ic_share_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:drawableStart="@mipmap/ic_comment_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grayF2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</LinearLayout>