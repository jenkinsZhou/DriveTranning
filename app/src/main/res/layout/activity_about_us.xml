<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color_activity_background"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <ImageView
        android:layout_marginTop="@dimen/dp_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_logo"/>

    <TextView
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交通安培"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black171717"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tvAppVersion"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.0.0"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray999999"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:text="客服热线"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_26"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="客服热线"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_26"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/gray999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_28"
            android:gravity="end"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <include layout="@layout/line_horizontal_gray_eeeeee_0_5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:text="版本更新"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_26"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="好赞，当前已是最新版本"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_26"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/gray999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableEnd="@drawable/icon_arrow_right"
            android:layout_marginEnd="@dimen/dp_28"
            android:gravity="end"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/versionDesc"
            android:text="CopyRight@2019.All Rights Reserved 版权所有"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray999999"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="交通安培 版权所有"
            android:textSize="@dimen/sp_12"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray999999"
            android:layout_width="wrap_content"
            android:layout_above="@id/versionDesc"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>