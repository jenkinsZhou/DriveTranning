<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.certificate.CertificationDetailsActivity">

    <include layout="@layout/frame_layout_title_bar" />

    <LinearLayout
        android:id="@+id/llShare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10" />


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_260"
            android:layout_marginTop="@dimen/dp_5" />


        <ImageView
            android:id="@+id/ivCode"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="扫码可查看详细的培训记录"
            android:textColor="@color/gray666666"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="@dimen/dp_135"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_bg_radius_23_color_accent_hollow"
                android:drawableLeft="@mipmap/icon_download"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:text="  保存证书"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_17" />


            <TextView
                android:id="@+id/btnShare"
                android:layout_width="@dimen/dp_135"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/selector_bg_radius_23_color_accent_hollow"
                android:drawableLeft="@mipmap/icon_share_certification"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:text="  分享证书"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>