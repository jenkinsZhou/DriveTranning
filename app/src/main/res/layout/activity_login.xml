<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayFBF8FB"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="交通运输部安委会“安全创新”特别推荐"
                android:textColor="@color/gray666666"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="人民交通出版社道路运输从业人员安全教育数字课程唯一发布平台"
                android:textColor="@color/gray666666"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_89"
                    android:src="@drawable/img_logo" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_36"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:src="@drawable/icon_identity_card_selected" />
                    <!-- android:text="340811199311135335"-->
                    <EditText
                        android:id="@+id/etIdCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_11"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:hint="请输入身份证号码"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/gray999999"
                        android:textSize="@dimen/sp_13" />


                    <ImageView
                        android:id="@+id/ivClearInputId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:src="@mipmap/ic_closed" />

                    <ImageView
                        android:layout_marginStart="@dimen/dp_15"
                        android:id="@+id/ivAccountCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:src="@drawable/icon_check"
                        android:visibility="gone" />


                </LinearLayout>

                <View
                    android:id="@+id/viewLineAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:src="@drawable/icon_password_normal" />
                    <!--  android:text="135335"-->
                    <EditText
                        android:id="@+id/etPass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_11"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入登录密码"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:textColorHint="@color/gray999999"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/gray999999"
                        android:textSize="@dimen/sp_13" />
                    <ImageView
                        android:id="@+id/ivClearInputPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:src="@mipmap/ic_closed" />

                    <ImageView
                        android:id="@+id/ivPassCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:src="@drawable/icon_check"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:id="@+id/viewLinePass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/grayA0A0A0" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/icon_point"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="首次登录密码为身份证号码的后6位"
                        android:textColor="@color/blue5087FF"
                        android:textSize="@dimen/sp_12" />


                    <TextView
                        android:id="@+id/btnForgetPassword"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="忘记密码？"
                        android:textColor="@color/blue004D8E"
                        android:textSize="13sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_radius_25_gray_d2d2d2"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_38"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_38"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/cb_button_selector"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="已同意"
                        android:textColor="@color/gray333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/btnContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《交通安培》"
                        android:textColor="#3D8FEA"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户服务协议"
                        android:textColor="@color/gray333333"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRegisterIndustrial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个体工商户注册"
                        android:textColor="@color/blue004D8E"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@color/grayDBDBDB" />

                    <TextView
                        android:id="@+id/tvRegisterDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="驾驶员注册"
                        android:textColor="@color/blue004D8E"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>