<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_10_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_69"
        android:layout_height="@dimen/dp_69"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@mipmap/icon_alert_success"
        />

    <TextView
        android:id="@+id/tvAlertTile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_22"
        android:text="签到成功"
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tvAlertContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_13"
        android:text="--"
        android:textColor="@color/gray999999"
        android:textSize="@dimen/sp_13"/>

    <TextView
        android:id="@+id/tvAlertConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_19"
        android:background="@drawable/bg_gradient_radius_25_blue_53c2ff_4e52ff"
        android:gravity="center"
        android:paddingStart="@dimen/dp_38"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_38"
        android:paddingBottom="@dimen/dp_8"
        android:minWidth="@dimen/dp_110"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</LinearLayout>