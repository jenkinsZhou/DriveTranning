<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color_activity_background"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/bg_radius_10_white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="新手机号码"
                    android:textColor="@color/black000000"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/etPhone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@null"
                    android:hint="请输入新手机号码"
                    android:maxLength="11"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="短信验证码"
                    android:textColor="@color/black000000"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/etVCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLength="8"
                    android:hint="请输入验证码"
                    android:paddingTop="@dimen/dp_5"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvGetVCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_gradient_radius_25_blue_53c2ff_4e52ff"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_22"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingEnd="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_blue_53c2ff_4e52ff"
        android:gravity="center"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

</LinearLayout>