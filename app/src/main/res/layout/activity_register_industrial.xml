<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--工商户注册-->
    <include layout="@layout/frame_layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_36"
                    android:paddingEnd="@dimen/dp_36">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_register_industry_edit_margin_top"
                        android:layout_marginBottom="@dimen/dp_register_industry_edit_margin_bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_8"
                            android:minWidth="@dimen/dp_25"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_name" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_30"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入户主姓名"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/grayBFBFBF"
                            android:textColorHint="@color/grayBFBFBF"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_e8e8e8_0_5dp" />

                    <!--电话-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_register_industry_edit_margin_top"
                        android:layout_marginBottom="@dimen/dp_register_industry_edit_margin_bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_8"
                            android:minWidth="@dimen/dp_25"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_cellphone" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_30"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入户主联系电话"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/grayBFBFBF"
                            android:textColorHint="@color/grayBFBFBF"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_e8e8e8_0_5dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_register_industry_edit_margin_top"
                        android:layout_marginBottom="@dimen/dp_register_industry_edit_margin_bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_8"
                            android:minWidth="@dimen/dp_25"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_number" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_register_industry_edit_margin_start"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入户主身份证号码"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/grayBFBFBF"
                            android:textColorHint="@color/grayBFBFBF"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_e8e8e8_0_5dp" />

                    <!--驾驶员车牌-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_register_industry_edit_margin_top"
                        android:layout_marginBottom="@dimen/dp_register_industry_edit_margin_bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_8"
                            android:minWidth="@dimen/dp_25"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/icon_number" />

                        </LinearLayout>


                        <EditText
                            android:id="@+id/etDriverPlantNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_register_industry_edit_margin_start"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请填写驾驶员车牌"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/grayBFBFBF"
                            android:textColorHint="@color/grayBFBFBF"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_e8e8e8_0_5dp" />
                    <!--监管单位-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_register_industry_edit_margin_top"
                        android:layout_marginBottom="@dimen/dp_register_industry_edit_margin_bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_8"
                            android:minWidth="@dimen/dp_25"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_unit" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_register_industry_edit_margin_start"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请填写上级监管单位"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/grayBFBFBF"
                            android:textColorHint="@color/grayBFBFBF"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_e8e8e8_0_5dp" />

                    <!--行业类型-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_register_industry_edit_margin_top"
                        android:layout_marginBottom="@dimen/dp_register_industry_edit_margin_bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_8"
                            android:minWidth="@dimen/dp_25"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_industry" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_register_industry_edit_margin_start"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请选择行业类型"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/grayBFBFBF"
                            android:textColorHint="@color/grayBFBFBF"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:src="@drawable/icon_industry" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/grayF5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_36"
                        android:paddingEnd="@dimen/dp_36">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营业执照上传"
                            android:textColor="@color/black171717"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:text="保证营业执照清晰可显示"
                            android:textColor="@color/gray999999"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rlPickImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_45"
                        android:background="@drawable/bg_radius_15_blue_e7efff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_15"
                                android:scaleType="fitXY"
                                android:src="@drawable/btn_uploading" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:text="请上传营业执照"
                                android:textColor="@color/black181818"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/ivSelectedImage"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvRegisterIndustrial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_36"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_36"
                        android:background="@drawable/selector_gradient_radius_25_blue"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_38"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_38"
                        android:paddingBottom="@dimen/dp_7"
                        android:text="立即注册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />


                    <TextView
                        android:id="@+id/tvGoLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_18"
                        android:text="已有账户返回登录>"
                        android:textColor="@color/blue5087FF"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/keyboardParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" />
    </RelativeLayout>


</LinearLayout>