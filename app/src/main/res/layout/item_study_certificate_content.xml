<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rivCertificateImage"
            android:layout_width="@dimen/dp_144"
            android:layout_height="@dimen/dp_107"
            app:riv_corner_radius="@dimen/dp_5"
            android:src="@drawable/icon_identity_card_normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_9"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvCertificateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019年12月23日学完了"
                android:textColor="@color/gray666666"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tvCertificateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="课程名称课程名称课程名称"
                android:textColor="@color/gray333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/tvLookDetail"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentBottom="true"
                       android:text="查看详情"
                       android:textSize="@dimen/sp_13"
                       android:textStyle="bold"
                       android:textColor="@color/blue5E8FEB"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>