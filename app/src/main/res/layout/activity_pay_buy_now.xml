<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF9F9F9"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text13spBlack333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:text="支付金额" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTagYuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:text="20.00"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/tvTagUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.tourcoo.training.widget.view.XRadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llCoinGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/bg_radius_10_white"
            android:orientation="vertical">
            <!--学币支付-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_pay_gold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="学币支付"
                    android:textColor="@color/black000000"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5dp" />

            <FrameLayout
                android:id="@+id/ffCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_27">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text15spBlack333333"
                            android:text="企业学币" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/bg_radius_3_yellow_ff7b26"
                            android:paddingStart="@dimen/dp_3"
                            android:paddingTop="@dimen/dp_1"
                            android:paddingEnd="@dimen/dp_3"
                            android:paddingBottom="@dimen/dp_1"
                            android:text="推荐"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_8" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCompanyRemain"
                        style="@style/Text13spGray999999"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="剩余学币:30个"
                        android:textSize="@dimen/sp_13" />

                </RelativeLayout>

                <RadioButton
                    android:id="@+id/rbCompany"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@null"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/rb_button_selector" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_27"
                android:background="@color/grayEAEAEA" />

            <FrameLayout
                android:id="@+id/ffUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_27">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_12"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text15spBlack333333"
                            android:text="个人学币" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/bg_radius_3_yellow_ff7b26"
                            android:paddingStart="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingEnd="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="推荐"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCoinRemain"
                        style="@style/Text13spGray999999"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="剩余学币:20个"
                        android:textSize="@dimen/sp_13" />




                </RelativeLayout>

                <RadioButton
                    android:id="@+id/rbUs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@null"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/rb_button_selector" />

                <TextView
                    android:id="@+id/tvGoRecharge"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/bg_gradient_radius_5_blue_53c2ff_4e52ff"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingEnd="@dimen/dp_12"
                    android:layout_gravity="end|center_vertical"

                    android:layout_marginEnd="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="充值"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llCashGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/bg_radius_10_white"
            android:orientation="vertical">
            <!--学币支付-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_pay_type_cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="现金支付"
                    android:textColor="@color/black000000"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_27">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginEnd="@dimen/dp_27"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_pay_type_ali" />

                        <TextView
                            style="@style/Text15spBlack333333"
                            android:layout_marginStart="@dimen/dp_15"
                            android:text="支付宝支付" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/bg_radius_5_yellow_ff7b26"
                            android:paddingStart="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingEnd="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="推荐"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            android:visibility="invisible" />
                    </LinearLayout>

                </RelativeLayout>

                <RadioButton
                    android:id="@+id/rbAlipay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@null"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/rb_button_selector" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_27"
                android:background="@color/grayEAEAEA" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_27">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginEnd="@dimen/dp_27"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_pay_type_wechat" />

                        <TextView
                            style="@style/Text15spBlack333333"
                            android:layout_marginStart="@dimen/dp_15"
                            android:text="微信支付" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/bg_radius_5_yellow_ff7b26"
                            android:paddingStart="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingEnd="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="推荐"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            android:visibility="invisible" />
                    </LinearLayout>

                </RelativeLayout>

                <RadioButton
                    android:id="@+id/rbWx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@null"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/rb_button_selector" />

            </FrameLayout>

        </LinearLayout>

    </com.tourcoo.training.widget.view.XRadioGroup>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/enable_selector_bg_gradient_radius_25_blue_53c2ff_4e52ff"
            android:gravity="center"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_8"
            android:text="确定支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>


</LinearLayout>