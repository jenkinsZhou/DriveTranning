<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF9F9F9"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_radius_5_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="安全员"
            android:textColor="#FF6600"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minWidth="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_training_local_detail_course_name" />
            </LinearLayout>


            <TextView
                style="@style/Text15spGray999999"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="课程名称：" />

            <TextView
                android:id="@+id/tvCourseName"
                style="@style/Text15spBlack333333"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="现场+线上安全教育培训" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minWidth="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_training_local_detail_course_time" />
            </LinearLayout>

            <TextView
                style="@style/Text15spGray999999"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="计划时间：" />

            <TextView
                android:id="@+id/tvCoursePlanTime"
                style="@style/Text15spBlack333333"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="2020-02-21 15:30" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:minWidth="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_training_local_detail_address" />
            </LinearLayout>


            <TextView

                style="@style/Text15spGray999999"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/dp_5"
                android:text="地点        ：" />

            <TextView
                android:id="@+id/tvLocate"
                style="@style/Text15spBlack333333"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/dp_5"
                android:text="安徽省合肥市蜀山区呼叫中心安徽省合肥市蜀山区呼叫中心" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minWidth="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_training_local_detail_course_length" />
            </LinearLayout>

            <TextView
                style="@style/Text15spGray999999"
                android:layout_marginStart="@dimen/dp_5"
                android:text="课时        ：" />

            <TextView
                android:id="@+id/tvCourseTime"
                style="@style/Text15spBlack333333"
                android:layout_marginStart="@dimen/dp_5"
                android:text="-" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/grayE5E5E5" />
        <!--button点击区域-->

        <RelativeLayout
            android:id="@+id/rlButtonTeacherLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_10">

            <!--安全员签到按钮-->
            <ImageView
                android:id="@+id/ivSignTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_train_local_sign_teacher" />

            <!--安全员转线上-->
            <ImageView
                android:id="@+id/ivToOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_train_local_turn_online" />


        </RelativeLayout>


        <!--签到信息模块-->
        <FrameLayout
            android:id="@+id/llTrainStatusTeacherLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llSignedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minWidth="@dimen/dp_20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_training_local_detail_course_time" />
                    </LinearLayout>

                    <TextView
                        style="@style/Text15spGray999999"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="签到时间：" />

                    <TextView
                        android:id="@+id/tvTeacherSignTime"
                        style="@style/Text15spBlack333333"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="-" />
                </LinearLayout>

                <!--预计结束时间-->
                <LinearLayout
                    android:id="@+id/llPreEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minWidth="@dimen/dp_20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_training_local_detail_course_time" />
                    </LinearLayout>

                    <TextView
                        style="@style/Text15spGray999999"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="预计结束时间：" />

                    <TextView
                        android:id="@+id/tvPreEndTime"
                        style="@style/Text15spBlack333333"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="-" />
                </LinearLayout>

                <!--结束时间-->
                <LinearLayout
                    android:id="@+id/llEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minWidth="@dimen/dp_20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_training_local_detail_course_time" />
                    </LinearLayout>

                    <TextView
                        style="@style/Text15spGray999999"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="结束时间：" />

                    <TextView
                        android:id="@+id/tvTeacherEndTime"
                        style="@style/Text15spBlack333333"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivStatusTagTeacher"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@mipmap/ic_training_state_no_start" />


        </FrameLayout>




    </LinearLayout>


</LinearLayout>