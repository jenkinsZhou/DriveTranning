<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_5_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_35"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_19">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_78"
            android:src="@mipmap/icon_alert_success" />
        <TextView
            android:id="@+id/tvAlertTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_gravity="center_horizontal"
            android:text="本次现场培训已结束。"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tvAlertContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_18"
            android:lineSpacingMultiplier="1.3"
            android:text="由于您没有及时完成本次现场培训，所以没有及时完成本次现场培训"
            android:textColor="@color/gray999999"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tvAlertConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_36"
            android:background="@drawable/selector_gradient_radius_25_blue"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingStart="@dimen/dp_38"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_38"
            android:paddingBottom="@dimen/dp_8"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>


</LinearLayout>