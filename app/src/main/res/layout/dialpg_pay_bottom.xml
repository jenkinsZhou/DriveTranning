<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayF4F4F4"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:background="@color/white"
        android:orientation="vertical">
        <!--学币支付-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

           <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_pay_type_cash" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_6"
                android:text="请选择充值方式"
                android:textColor="@color/black333333"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5dp" />

        <RelativeLayout
            android:id="@+id/rlPayAli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_17"
            android:paddingEnd="@dimen/dp_27"
            android:paddingStart="@dimen/dp_12"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_pay_type_ali" />

                <TextView
                    style="@style/Text15spBlack333333"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="支付宝支付" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/bg_radius_5_yellow_ff7b26"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="推荐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9"
                    android:visibility="invisible" />
            </LinearLayout>

            <!--  <TextView
                  style="@style/Text13spGray999999"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:text="剩余学币:30个"
                  android:textSize="@dimen/sp_13" />-->

            <ImageView
                android:id="@+id/ivAliPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_pay_type_checked" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_27"
            android:background="@color/grayEAEAEA" />

        <RelativeLayout
            android:id="@+id/rlPayWeChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_17"
            android:paddingEnd="@dimen/dp_27"
            android:paddingStart="@dimen/dp_12"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_pay_type_wechat" />

                <TextView
                    style="@style/Text15spBlack333333"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="微信支付" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/bg_radius_5_yellow_ff7b26"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="推荐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- <TextView
                 style="@style/Text13spGray999999"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 android:text="剩余学币:20个"
                 android:textSize="@dimen/sp_13" />-->

            <ImageView
                android:id="@+id/ivWeChatPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_pay_type_un_checked" />
        </RelativeLayout>
    </LinearLayout>
 <LinearLayout
     android:layout_marginTop="@dimen/dp_5"
         android:orientation="vertical"
     android:background="@color/white"
     android:padding="@dimen/dp_14"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     <TextView
         android:id="@+id/tvConfirm"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/selector_gradient_radius_25_blue"
         android:clickable="true"
         android:focusable="true"
         android:gravity="center"
         android:paddingStart="@dimen/dp_38"
         android:paddingTop="@dimen/dp_8"
         android:paddingEnd="@dimen/dp_38"
         android:paddingBottom="@dimen/dp_8"
         android:text="确认充值"
         android:textColor="@color/white"
         android:textSize="@dimen/sp_15" />
     </LinearLayout>

</LinearLayout>