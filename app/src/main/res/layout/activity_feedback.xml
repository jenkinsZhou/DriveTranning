<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--申请退单-->
    <include layout="@layout/frame_layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_blue_53c2ff_4e52ff"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <androidx.core.widget.NestedScrollView
            android:layout_alignParentTop="true"
            android:layout_above="@id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="问题类型"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tvQuestionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:drawableRight="@mipmap/ic_arrow_right_white_small"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="点击选择"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <!--详细原因-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="问题描述"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/etDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请填写详细的问题描述（选填）"
                        android:maxLength="200"
                        android:minHeight="@dimen/dp_30"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_70"
                    android:padding="@dimen/dp_10" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</LinearLayout>