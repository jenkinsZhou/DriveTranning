<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_365"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_exam_not_pass_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_130"
        android:text="很遗憾，您未通过考试"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginRight="@dimen/dp_30"
        android:text="总共40道题，答对30道题，总分90分。(80分合格）"
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_210"
        android:background="@drawable/selector_gradient_radius_25_blue"
        android:gravity="center"
        android:text="重新考试"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_14" />

</FrameLayout>