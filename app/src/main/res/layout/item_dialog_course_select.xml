<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

     <LinearLayout
         android:layout_marginStart="@dimen/dp_35"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/ivItemIcon"
             android:layout_gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/ic_class_type_select" />
         <TextView
             android:id="@+id/tvItemName"
             android:layout_marginStart="@dimen/dp_10"
             android:paddingTop="@dimen/dp_15"
             android:paddingBottom="@dimen/dp_15"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textSize="@dimen/sp_15"
             android:textColor="@color/gray666666"
             android:layout_gravity="center_vertical"
             android:text="--" />

         <ImageView
             android:id="@+id/ivItemSelect"
             android:paddingTop="@dimen/dp_10"
             android:paddingStart="@dimen/dp_10"
             android:paddingEnd="@dimen/dp_10"
             android:paddingBottom="@dimen/dp_10"
             android:layout_gravity="center_vertical"
             android:layout_marginEnd="@dimen/dp_25"
             android:src="@drawable/shape_circle_white_hollow_gray_bfbfbf"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

     </LinearLayout>



    <View
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:background="@color/grayE8E5E9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</LinearLayout>