<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />

    <LinearLayout
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:orientation="horizontal">

                <!--      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginStart="@dimen/dp_5"
                          android:src="@drawable/icon_password_normal" />-->

                <EditText
                    android:id="@+id/etVCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLength="11"
                    android:hint="请输入验证码"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tvGetVCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_gradient_radius_25_blue"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingEnd="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/lineVCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/grayA2A2A2" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:orientation="horizontal">

                <!--      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginStart="@dimen/dp_5"
                          android:src="@drawable/icon_password_normal" />-->

                <EditText
                    android:id="@+id/etNewPass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLength="18"
                    android:hint="请输入新密码（6-18位数字或字母组成）"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:id="@+id/ivNewPassClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="gone"
                    android:paddingStart="@dimen/dp_5"
                    android:src="@mipmap/ic_closed" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/lineNewPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/grayA2A2A2" />
    </LinearLayout>

    <!-- android:background="@drawable/selector_gradient_radius_25_blue"-->
    <TextView
        android:id="@+id/tvConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:background="@drawable/bg_radius_25_gray_d2d2d2"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:paddingStart="@dimen/dp_38"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_38"
        android:paddingBottom="@dimen/dp_8"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

</LinearLayout>