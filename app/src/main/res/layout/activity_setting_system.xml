<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color_activity_background"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text15spBlack333333"
                android:text="修改密码"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/Text15spGrayA2A2A2"
                android:text="填写密码"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_7"
                android:gravity="end"
                android:drawableEnd="@drawable/icon_arrow_right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text15spBlack333333"
                android:text="确认密码"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/Text15spGrayA2A2A2"
                android:text="确认密码"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_7"
                android:gravity="end"
                android:drawableEnd="@drawable/icon_arrow_right"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text15spBlack333333"
                android:text="关于我们"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/Text15spGrayA2A2A2"
                android:text=""
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_7"
                android:gravity="end"
                android:drawableEnd="@drawable/icon_arrow_right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text15spBlack333333"
                android:text="清除缓存"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/Text15spGrayA2A2A2"
                android:text="12M"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_7"
                android:gravity="end"
                android:drawableEnd="@drawable/icon_arrow_right"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/redFF736C"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:minHeight="@dimen/dp_49"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</LinearLayout>