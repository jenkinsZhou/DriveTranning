<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteFFFEFF"
    android:orientation="vertical">
   <LinearLayout
       android:paddingStart="@dimen/dp_38"
       android:paddingTop="@dimen/dp_12"
       android:paddingBottom="@dimen/dp_10"
       android:paddingEnd="@dimen/dp_37"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:src="@mipmap/img_wechat_pay"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="微信支付"
               android:layout_marginStart="@dimen/dp_10"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black333333"
               android:textSize="@dimen/sp_15" />
           <CheckBox
               android:padding="@dimen/dp_5"
               android:checked="true"
               android:layout_gravity="center_vertical"
               style="@style/CheckBoxThemeSelectPay"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>

       <View
           android:layout_marginTop="@dimen/dp_10"
           android:background="@color/grayF0F0E9"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_0_5"/>

       <LinearLayout
           android:layout_marginTop="@dimen/dp_9"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:src="@mipmap/img_alipay"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="支付宝支付"
               android:layout_marginStart="@dimen/dp_10"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black333333"
               android:textSize="@dimen/sp_15" />
           <CheckBox
               android:padding="@dimen/dp_5"
               android:layout_gravity="center_vertical"
               style="@style/CheckBoxThemeSelectPay"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
               </LinearLayout>

    <TextView
        android:id="@+id/tvCoinPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_gradient_radius_25_blue"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_22"
        android:layout_marginStart="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_7"
        android:text="确定支付（2学币）"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>