<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGuideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="行业资讯 一览无余"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/tvGuideContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="最新资讯热点 您关心的话题新闻都在这里"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tvGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_18"
            android:background="@drawable/selector_gradient_radius_25_blue"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            android:paddingStart="@dimen/dp_38"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_38"
            android:paddingBottom="@dimen/dp_10"
            android:text="立即进入"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</RelativeLayout>