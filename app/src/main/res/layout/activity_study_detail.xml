<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/bg_radius_10_white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_18">
                <!-- <androidx.core.widget.NestedScrollView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">-->


                <TextView
                    android:id="@+id/tvTrainName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/app_name"
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <!--开始-->
                <LinearLayout
                    android:id="@+id/llStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始"
                            android:textColor="@color/blue5087FF"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <!--中间圆点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/shape_circle_blue_5087ff" />

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/grayEEEEEE" />

                    </LinearLayout>

                    <!--最右侧信息布局-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--开始时间-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvStartTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <!--地点-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地点"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvLocate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <!--安全员-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="安全员"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvTeacherName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <!--课时-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="课时"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvCourseLength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--签到模块-->
                <LinearLayout
                    android:id="@+id/llSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签到"
                            android:textColor="@color/gray999999"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <!--中间圆点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/shape_circle_gray99999" />

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/grayEEEEEE" />

                    </LinearLayout>

                    <!--最右侧信息布局-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--签到时间模块-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvSignInTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--签退模块-->
                <LinearLayout
                    android:id="@+id/llSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签退"
                            android:textColor="@color/gray999999"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <!--中间圆点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/shape_circle_gray99999" />

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/grayEEEEEE" />

                    </LinearLayout>

                    <!--最右侧信息布局-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--签退时间-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvSignOutTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--线上模块-->
                <LinearLayout
                    android:id="@+id/llOnline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线上"
                            android:textColor="@color/gray999999"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <!--中间圆点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/shape_circle_gray99999" />

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/grayEEEEEE" />

                    </LinearLayout>

                    <!--最右侧信息布局-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--线上培训时间-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvOnLineTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <!--课时-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="课时"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvCourseTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <!--学习进度-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学习进度"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvStudyProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <!--考试模块-->
                <LinearLayout
                    android:id="@+id/llExam"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="考试"
                            android:textColor="@color/gray999999"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <!--中间圆点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/shape_circle_gray99999" />

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/grayEEEEEE" />

                    </LinearLayout>

                    <!--最右侧信息布局-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--考试时间-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvExamTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <!--考试成绩-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="考试成绩"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvExamScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <!--结束模块-->
                <LinearLayout
                    android:id="@+id/llEnd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="结束"
                            android:textColor="@color/gray999999"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <!--中间圆点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/shape_circle_yellow_f39800" />

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/grayEEEEEE" />

                    </LinearLayout>

                    <!--最右侧信息布局-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--考试时间-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="@color/gray999999"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/tvEndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="-"
                                android:textColor="@color/black333333"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <!--</androidx.core.widget.NestedScrollView>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/bg_radius_10_white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="目录"
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>