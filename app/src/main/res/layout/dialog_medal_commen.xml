<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivCloseRect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_gravity="end"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/ic_close_rect" />

    <ImageView
        android:id="@+id/ivMedalIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/icon_medal_star" />


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="恭喜您获得·安培新星勋章"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/Text13spWhite"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="累计学习时长6个小时" />


    <TextView
        android:id="@+id/tvPositive"
        android:layout_marginBottom="@dimen/dp_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gradient_radius_25_blue_53c2ff_4e52ff"
        android:gravity="center"
        android:paddingStart="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_18"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_38"
        android:paddingBottom="@dimen/dp_8"
        android:text="查看更多勋章"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</LinearLayout>