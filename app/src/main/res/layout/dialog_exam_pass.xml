<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/bg_exam_pass_img"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/dp_365"/>

    <TextView
        android:layout_marginTop="@dimen/dp_130"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜，您已通过考试"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="总共40道题，答对30道题，总分90分。(80分合格）"
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/grayF0F0E9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNegative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center"
                android:text="否"
                android:textColor="@color/blue5087FF"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="wrap_content"
                android:background="@color/grayF0F0E9" />

            <TextView
                android:id="@+id/tvPositive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是"
                android:textColor="@color/blue5087FF"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>