<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item android:left="@dimen/dp_4" android:top="@dimen/dp_4">
                <shape>
                    <solid android:color="#ff58bb52" />
                    <corners android:radius="@dimen/dp_30"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/dp_4" android:top="@dimen/dp_4">
                <shape>
                    <solid android:color="@color/blue5087FF" />
                    <corners android:radius="@dimen/dp_30"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item android:bottom="@dimen/dp_4" android:right="@dimen/dp_4">
                <shape>
                    <solid android:color="#ff58bb52" />
                    <corners android:radius="@dimen/dp_30"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
